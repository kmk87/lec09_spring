<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC
"-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="memberMapper">
	
	<!-- 채팅하고자 하는 사용자 가져오기 -->
	<select id="selectMemberNotSender" parameterType="_int"
	resultType="com.gn.spring.member.model.vo.Member">
		SELECT `user_no`, `user_name`
		FROM `user`
		<where>
			`user_no` != #{sender_no}
		</where>
	</select>
	

	<!-- 회원가입 -->
	<insert id="createMember" parameterType="com.gn.spring.member.model.vo.Member">
		INSERT INTO `user`(user_id,user_pw,user_name)
		VALUES (#{user_id},#{user_pw},#{user_name})
	</insert>
	
	
	<!-- 사용자 아이디 가져오기 -->
	<select id="selectMemberById" parameterType="string" 
	resultType="com.gn.spring.member.model.vo.Member">
		SELECT * 
		FROM `user`
		<where>
			user_id = #{user_id}
		</where>
	
	</select>

	
</mapper>